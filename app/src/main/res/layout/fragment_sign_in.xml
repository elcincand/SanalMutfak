<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android.sanalmutfak.SignUpFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/logo2"
            android:layout_weight="0.73" />

        <EditText
            android:id="@+id/signmutfak"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:hint="Kitchen Name"/>

        <EditText
            android:id="@+id/signpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"/>



        <Button
            android:id="@+id/signsign"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Sign Up" />

        <TextView
            android:id="@+id/dontyou"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="Do you already have an account?"
            android:layout_weight="0.06" />


    </LinearLayout>
</FrameLayout>


