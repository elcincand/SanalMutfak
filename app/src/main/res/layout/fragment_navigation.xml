<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.sanalmutfak.NavigationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="1">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="83dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/logo2"
            android:layout_weight="0.21" />

        <EditText
            android:id="@+id/add"
            android:layout_marginLeft="20dp"
            android:layout_marginTop= "20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Add Food..." />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_weight="0.1"
            app:srcCompat="@android:drawable/ic_menu_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="194dp"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:gravity="top"
        android:background="@color/CadetBlue"
        android:orientation="vertical">
    <Button
        android:id="@+id/myprofile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Profile" />


    <Button
        android:id="@+id/myinventory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Inventory" />

    <Button
        android:id="@+id/myimprovement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Savings" />

    <Button
        android:id="@+id/myshopp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Shopping List" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/menu"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_big_off" />

        <ImageButton
            android:id="@+id/addbar"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:srcCompat="@android:drawable/ic_menu_add" />


        <ImageButton
            android:id="@+id/logout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_lock_power_off" />
    </LinearLayout>
</FrameLayout>
